@using LkModule.Areas.Lk.Models
@model  SubscrWidgetFrontModel

@{ Layout = null; }

@if (Model.Item != null)
{
    <div class="box box-solid">
        <div class="box-header with-border">
            <h4 class="box-title">Лицевые счета</h4>
            <div class="row">
                <div class="box-body">
                    @if (Model.List != null && Model.List.Count() > 0)
                    {
                        <ul class="todo-list">
                            @foreach (var item in Model.List)
                            {
                                string _class = "";
                                if (Model.Item != null && item.Id == Model.Item.Id)
                                {
                                    _class = " fa-star";
                                }
                                else
                                {
                                    _class = " fa-star-o";
                                }
                                <li @_class>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <a href="/lk/LkWidgets/setUserSubscrDefault" data-subscr-id="@item.Id" class="setSubscDefault-link">
                                                <i class="fa @_class text-orange"></i> &nbsp;&nbsp; @item.SubscrId - @item.Name
                                            </a>
                                            <p class="text-muted small">@item.Name</p>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
}



