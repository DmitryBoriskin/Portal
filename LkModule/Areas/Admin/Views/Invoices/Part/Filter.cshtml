@{
    string beginDate = ViewBag.beginDate;
    string endDate = ViewBag.endDate;

    bool payed = false;
    bool.TryParse(ViewBag.payed, out payed);
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-6">@Html.TextBox("datestart", beginDate, new { @class = "uc_input", @data_type = "date", @title = "Дата с", @placeholder = "дд.мм.гггг" })</div>
        <div class="col-xs-6">@Html.TextBox("dateend", endDate, new { @class = "uc_input", @data_type = "date", @title = "по", @placeholder = "дд.мм.гггг" })</div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                <label class="label_filtr">Статус оплаты:</label>
                <select class="select2" name="payed">
                    <option value="">не выбрано</option>
                    <option value="true" @(payed ? "selected" : "")>Оплачено</option>
                    <option value="false" @(payed ? "" : "selected")>Не оплачено</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6"><button type="submit" name="action" value="search-btn" class="button btn-primary">Применить</button></div>
        <div class="col-md-6"><button type="submit" name="action" value="clear-btn" class="button btn-default">Сбросить</button></div>
    </div>
}
