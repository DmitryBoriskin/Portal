@model LkModule.Areas.Admin.Models.SubscrViewModel

@using (Html.BeginForm(Model.ActionName, Model.ControllerName, FormMethod.Post))
{
    if (User.Identity.HasClaim(Model.ControllerName, "view"))
    {
        <div class="content">
            <h1>@Model.PageName</h1>
            <div class="row">
                <div class="col-xs-4">
                    @Html.TextBoxFor(m => m.Item.Surname, new { @required = "", @Title = "Фамилия", @placeholder = "Фамилия", MaxLength = "128", data_help = "12" })
                </div>
                <div class="col-xs-4">
                    @Html.TextBoxFor(m => m.Item.Name, new { @required = "", @Title = "Имя", @placeholder = "Имя", @MaxLength = "128" })
                </div>
                <div class="col-xs-4">
                    @Html.TextBoxFor(m => m.Item.Patronymic, new { @Title = "Отчество", @placeholder = "Отчество", @MaxLength = "128" })
                </div>
            </div>
            @Html.TextBoxFor(m => m.Item.Address, new { title = "Адрес", placeholder = "Адрес" })
        </div>

        <div class="dop_info-block">
            <div class="dop-caption">Настройки</div>
            <div class="form-group">
                <label for="deps">Подразделение:</label>
                @Html.DropDownListFor(m => m.Item.Department, Model.Departments, new { title = "Подразделение", @class = "select2", @id = "deps" })
            </div>
            @Html.TextBoxFor(m => m.Item.Link, new { required = "", title = "номер ЛС", placeholder = "номер ЛС" })
            @Html.TextBoxFor(m => m.Item.Created, new { required = "", data_type = "date", title = "Дата создания", value = ViewBag.Date })
            @Html.TextBoxFor(m => m.Item.Phone, new { title = "телефон", placeholder = "телефон" })
            @Html.TextBoxFor(m => m.Item.Email, new { title = "email", placeholder = "email" })
            @Html.CheckBoxFor(m => m.Item.Disabled, new { type = "checkbox", title = "Запретить просмотр", data_toggle = "toggle", data_on = "запретить просмотр", data_onstyle = "danger", data_off = "показывать на сайте", data_offstyle = "success", data_width = "248" })
            @if (Model.Item != null)
            {
                @Html.ActionLink("Журнал изменений", "log", "services", new { @id = Model.Item.Id, @type = "page" }, new { @id = "LogLists", @class = "button pop-up_frame icon-archive", @data_class = "LogList", @title = "Журнал изменений" })
                @Html.ActionLink("Выставленные счета", "Index", "Charges", new { subscr = Model.Item.Id }, new { @class = "button icon-archive", @title = "Выставленные счета" })
                @Html.ActionLink("Приборы учёта", "Index", "MeterDevices", new { subscr = Model.Item.Id }, new { @class = "button icon-archive", @title = "Приборы учёта" })
            }
        </div>

        <div class="buttons">
            @if (User.Identity.HasClaim(Model.ControllerName, "edit") || User.Identity.HasClaim(Model.ControllerName, "create"))
            {
                <button type="submit" name="action" value="save-btn" data-primary="true" class="button icon-create">Сохранить</button>
            }
            @if (User.Identity.HasClaim(Model.ControllerName, "delete") && Model.Item != null)
            {
                <button type="submit" name="action" data-action="delete" value="delete-btn" class="button icon-delete">Удалить</button>
            }
            <button type="submit" name="action" data-action="cancel" value="cancel-btn" class="button icon-cancel">Закрыть</button>
        </div>
    }
    else
    {
        <div class="content"><p>У вас недостаточно прав.</p></div>
    }
}