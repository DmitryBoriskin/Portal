@model UserModelUpdate
<div class="col-md-7">
    <div class="box box-solid">
        <div class="box-header with-border">
            <h4 class="box-title">Мои данные</h4>
            <div class="row">
                
@using (Html.BeginForm("ChangeUserInfo", "Widget", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="box-body">
        <div class="form-group">
            <label class="col-sm-2 control-label">Фамилия</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Имя</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Отчество</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Patronimyc, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Телефон</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control masked-mobile-phone" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">E-mail</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>

        <div class="block_btnarea">
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10 ">
                    <button class="btn btn_orange" type="submit">Сохранить</button>
                </div>
            </div>
        </div>
    </div>
}
                    
                
            </div>
        </div>
    </div>
</div>