@using Portal.Models

@model LoginViewModel
@{
    ViewBag.Title = "Вход в личный кабинет";
    Layout = "~/Views/Shared/_LayoutWelcome.cshtml";
}
<div class="content">
    <div class="login-box">
        <div class="login-logo">
            <h2>Вход в личный кабинет</h2>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Введите свои учетные данные</p>

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-xs-12 register-link text-right">@Html.ActionLink("Регистрация", "Register", null, new { @class = "link__orange" })</div>
                </div>
                <div class="row">
                    <div class="form-group has-feedback">
                        @Html.LabelFor(m => m.Email, new { @class = "col-xs-3 col-md-2 control-label" })
                        <div class="col-xs-8 col-md-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                        @*<input type="email" class="form-control" placeholder="Email">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>*@
                    </div>
                </div>
                <div class="row">
                    <div class="form-group has-feedback">
                        @Html.LabelFor(m => m.Password, new { @class = "col-xs-3 col-md-2 control-label" })
                        <div class="col-xs-8 col-md-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                        @*<input type="password" class="form-control" placeholder="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>*@
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-offset-3 col-md-offset-2 col-xs-4" style="padding-left:0;">
                        <div class="checkbox icheck">
                            <label>
                                @*<div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;">
                            <input type="checkbox" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;">
                            <ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins>
                             </div> Remember Me*@
                                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "iCheck" })
                                @Html.LabelFor(m => m.RememberMe, new { @class = "control-label" })
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4" style="padding-right:0;">
                        <button type="submit" class="btn btn-warning btn-block btn-flat">Войти</button>
                    </div>
                    <!-- /.col -->
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                @*<div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="fa fa-facebook"></i> Sign in using
                    Facebook
