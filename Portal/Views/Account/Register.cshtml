@using Portal.Models

@model RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_LayoutWelcome.cshtml";
}
<div class="content">
    <div class="login-box">
        <div class="login-logo">
            <h2>@ViewBag.Title</h2>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Создать учетную запись</p>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
  
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-xs-4 col-md-3 control-label" })
                    <div class="col-xs-8 col-md-9">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.Surname, new { @class = "col-xs-4 col-md-3 control-label" })
                    <div class="col-xs-8 col-md-9">
                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-xs-4 col-md-3 control-label" })
                    <div class="col-xs-8 col-md-9">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Patronymic, new { @class = "col-xs-4 col-md-3 control-label" })
                    <div class="col-xs-8 col-md-9">
                        @Html.TextBoxFor(m => m.Patronymic, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Birthdate, new { @class = "col-xs-4 col-md-3 control-label" })
                    <div class="col-xs-8 col-md-9">
                        @Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-xs-4 col-md-3 control-label" })
                    <div class="col-xs-8 col-md-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-xs-4 col-md-3 control-label" })
                    <div class="col-xs-8 col-md-9">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-xs-offset- col-xs-4">
                        <input type="submit" class="btn btn-warning btn-block btn-flat" value="Создать" />
                    </div>
                </div>
            }

            @*@section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }*@
        </div>
    </div>
</div>
