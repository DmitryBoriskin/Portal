@using CartModule.Areas.Cart.Models

@model  CartFrontModel

@Html.Partial("Partial/header")

<div class="content">
    @if (Model.List != null)
    {
        <div class="box box-solid">
            <div class="box-header ui-sortable-handle" style="cursor: move;">
                <i class="fa fa-envelope"></i>
                <h3 class="box-title"><i class="fa fa-shopping-cart"></i> Корзина</h3>
            </div>
            <div class="box-body">
                <!-- Table row -->
                <div class="row topIndent-20">
                    <div class="col-xs-12 table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Название</th>
                                    <th>Цена <i class="fa fa-rouble"></i></th>
                                    <th>Кол-во ед.</th>
                                    <th>Сумма <i class="fa fa-rouble"></i></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.List != null && Model.List.Count() > 0)
                                {
                                    foreach (var item in Model.List)
                                    {
                                        <tr>
                                            <td>@item.Number</td>
                                            <td>@item.Title</td>
                                            <td>@item.Price.ToString("N2")</td>
                                            <td><input type="number" value="@item.Amount"/></td>
                                            <td>@item.AmountSum.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                <tr>
                                    <td colspan="3"><b>Итого:</b></td>
                                    <td>3</td>
                                    <td>100 р</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <div class="box-footer clearfix">
                    <a class="pull-left btn btn-default" id="" href="/cart/products/">
                        Добавить товар
                    </a>
                    <a class="pull-right btn btn-warning" id="" href="/cart/orders/new/">
                        Оформить заказ
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="box box-solid">
            <div class="box-body">
                <div class="noItems">Корзина пуста</div>
            </div>
        </div>
    }
</div>
