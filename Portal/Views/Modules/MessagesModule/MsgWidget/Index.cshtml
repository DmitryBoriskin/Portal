@using MessagesModule.Areas.Messages.Models
@model MsgWidgetFrontModel


<li class="dropdown messages-menu">
    <a href="/messages" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-envelope-o"></i>
        @if (Model.NewMsgCount > 0)
        {
            <span class="label label-success">@Model.NewMsgCount</span>
        }        
    </a>
    <ul class="dropdown-menu">
        <li class="header">@Model.NewMsgCountText</li>
        <li>            
            <ul class="menu">
                @if (Model.MsgList != null)
                {
                    foreach (var item in Model.MsgList)
                    {
                        <li>
                            <a href="/messages/item/@item.Id">
                                <h4>
                                    @item.Theme
                                    <small><i class="fa fa-clock-o"></i> @item.Date.ToString("g")</small>
                                </h4>
                                <p>@item.Text</p>                                
                            </a>
                        </li>
                    }
                }                
            </ul>
        </li>
        <li class="footer"><a href="/messages">История сообщений</a></li>
    </ul>
</li>

