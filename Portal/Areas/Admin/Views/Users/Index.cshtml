@model UsersViewModel

@using (Html.BeginForm())
{
    @*if (Model.UserResolution.Read)*@
    if (true)
    {
        <div class="content">
            <h1>@ViewBag.Title</h1>
            @if (Model.List != null && Model.List.Items != null && Model.List.Items.Count() > 0)
            {
                foreach (var item in Model.List.Items)
                {
                    string disabled = (item.Disabled) ? "disabled" : String.Empty;
                    <div class="list-item @disabled">
                        <a title="" class="li-caption" href="/admin/users/item/@item.Id/@ViewBag.urlQuery">@item.FullName</a>
                        @*<div class="li-desc"><span>Группа:</span> @item.GroupName</div>*@
                        <div class="li-desc"><span>E-mail:</span> @item.Email</div>
                    </div>
                }
                if (Model.List != null && Model.List.Pager != null)
                {
                    @Html.Partial("Partial/_pager", Model.List.Pager)
                }
            }
            else
            {
                <div class="alert alert-info">Не найдено ни одной записи.</div>
            }
        </div>

        <div class="dop_info-block">
            <div class="dop-caption">Фильтр</div>
            @Html.Partial("Part/SearchFilter")
        </div>

        <div class="buttons">
            @*@if (Model.UserResolution.Write)*@
            @if (true)
            {
                <button type="submit" name="action" value="insert-btn" class="button icon-create">Создать</button>
                @*<a href="@Model.ControllerName/item/@Guid.NewGuid()" class="button icon-create">Создать</a>*@
            }
        </div>
    }
    else
    {
        <div class="content"><p>У вас недостаточно прав.</p></div>
    }
}