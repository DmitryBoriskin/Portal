@model MenuViewModel
@using (Html.BeginForm(Model.ActionName, Model.ControllerName, FormMethod.Post))
{
    <div class="content">
        <h1>@ViewBag.Title</h1>
        <div class="row">
            <div class="col-xs-8">
                @Html.TextBoxFor(m => m.MenuItem.Title, new { @class = "uc_input", @required = "", @title = "Название", @placeholder = "Название", @MaxLength = "512" })
            </div>
            <div class="col-xs-4">
                @Html.TextBoxFor(m => m.MenuItem.Alias, new { @class = "uc_input", @required = "", @Title = "Псевдоним", @placeholder = "Псевдоним", @MaxLength = "16", @data_help = "Уникальное имя раздела, по которому будут раздаваться права пользователям на данный раздел." })
            </div>
        </div>
    </div>
    <div class="dop_info-block">
        <div class="dop-caption icon-layers">Доп. параметры</div>
    </div>
}