
@{
    Layout = "~/Areas/Admin/Views/Shared/_popUp.cshtml";
}
@model UsersViewModel
@using (Html.BeginForm())
{
    <div>
        <div class="change-pass_form">
            <div>
                <div id="user-info">
                    <div class="list-item">
                        <a class="li-caption">@Model.Item.FullName</a>
                        <div class="li-desc">
                            <span>E-Mail: </span> @Model.Item.Email
                        </div>
                    </div>
                </div>
                @if (ViewBag.SuccesAlert != null)
                {
                    <div class="alert alert-success" role="alert">@ViewBag.SuccesAlert</div>
                }
                @if (ViewBag.DankerAlert != null)
                {
                    <div class="alert alert-danger">@ViewBag.DankerAlert</div>
                }
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="input-group">
                        <label>Новый пароль</label>
                        @Html.TextBoxFor(m => Model.Password.Password, new { @class = "form-control", type = "password", minlength = "6", maxlength = "16", autocomplete = "off", @title = "Новый пароль" })
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="input-group">
                        <label>Повторите пароль</label>
                        @Html.TextBoxFor(m => Model.Password.PasswordConfirm, new { @class = "form-control", type = "password", minlength = "6", maxlength = "16", autocomplete = "off", @title = "Подтверждение пароля" })
                    </div>
                </div>
            </div>
            <div>
                <p>Пароль должен содержать от 6 до 16 символов.</p>
                <p>В нем должны содержаться строчные и прописные латинские буквы, цифры, а так же разрешено использовать спецсимволы.</p>
            </div>
            <div>
                <button type="submit" name="action" value="password-update" class="button icon-save">Изменить</button>
            </div>
        </div>
    </div>
}

