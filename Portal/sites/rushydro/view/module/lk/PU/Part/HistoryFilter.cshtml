<link href="~/Content/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />
<script src="~/Content/plugins/daterangepicker/moment.min.js"></script>
<script src="~/Content/plugins/daterangepicker/daterangepicker.js"></script>

@{
    var dateRange = "";
    if (!string.IsNullOrEmpty(ViewBag.beginDate))
    {
        dateRange = ViewBag.beginDate;
    }
    if (!string.IsNullOrEmpty(ViewBag.endDate))
    {
        dateRange = dateRange + " - " + ViewBag.endDate;
    }
}
<div class="filterByDateBlock">
    <form role="form">
        <div class="row">
            <div class="col-xs-8 col-sm-6">
                <div class="form-group">
                    <label for="filterDateRange-input" class="control-label">Диапазон: </label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control pull-right" id="filterDateRange-input1" value="@dateRange">
                        <input type="hidden" name="datestart" id="filterBeginDate-input1" value="@ViewBag.beginDate">
                        <input type="hidden" name="dateend" id="filterEndDate-input1" value="@ViewBag.endDate">
                    </div>
                </div>
            </div>
            <div class="col-xs-4">
                <div class="form-group">
                    <button type="submit" class="btn btn-default" style="margin-top: 25px;">Показать</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    $('#filterDateRange-input1').daterangepicker({
        "locale": {
            "format": "DD.MM.YYYY",
            "separator": " - ",
            "applyLabel": "Применить",
            "cancelLabel": "Отмена",
            "fromLabel": "С",
            "toLabel": "По",
            "customRangeLabel": "Custom",
            "weekLabel": "Нед",
            "daysOfWeek": [
                "Вс",
                "ПН",
                "Вт",
                "Ср",
                "Чт",
                "Пн",
                "Сб"
            ],
            "monthNames": [
                "Январь",
                "Февраль",
                "Март",
                "Апрель",
                "Май",
                "Июнь",
                "Июль",
                "Август",
                "Сентябрь",
                "Октябрь",
                "Ноябрь",
                "Декабрь"
            ],
            "firstDay": 1
        },
        "opens": "left"
    }, function (start, end, label) {
        $("#filterBeginDate-input1").val(start.format('DD.MM.YYYY'))
        $("#filterEndDate-input1").val(end.format('DD.MM.YYYY'))
        console.log('range: ' + label);
    });

    $('#filterDateRange-input1').on('apply.daterangepicker', function (ev, picker) {
        $("#filterBeginDate-input1").val(start.format('DD.MM.YYYY'))
        $("#filterEndDate-input1").val(end.format('DD.MM.YYYY'))
    });

</script>
