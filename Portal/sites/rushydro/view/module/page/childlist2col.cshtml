@model PageModel[]
<div class="block block_info">
    <div class="block_head__blue">Информация</div>
    <div class="row">
        @if (Model != null)
        {
            <div class="col-md-6">
                <ul>
                    @for (int i = 0; i < Model.Length / 2+1; i++)
                    {
                        <li><a href="@Model[i].Url">@Model[i].Name</a></li>
                    }
                </ul>                
            </div>
            <div class="col-md-6">
                <ul>
                    @for (int i = Model.Length / 2+1; i < Model.Length; i++)
                    {
                        <li><a href="@Model[i].Url">@Model[i].Name</a></li>
                    }
                </ul>                
            </div>
        }
    </div>
</div>


 